<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="@color/shadow_light" />
            <padding
                android:bottom="@dimen/project_border_size"
                android:left="@dimen/project_border_size"
                android:right="@dimen/project_border_size"
                android:top="@dimen/project_border_size"/>
            <corners android:radius="@dimen/round_normal"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/shadow" />
            <padding
                android:bottom="@dimen/project_shadow_size"/>
            <corners android:radius="@dimen/round_normal"/>
        </shape>
    </item>

</layer-list>

